<%= render "partials/header" %>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <%= render "partials/search" %>
                </div>
            </div>
            <table class="table mt-4 table-success table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">NÂ°</th>
